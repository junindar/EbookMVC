@using MVCPerpustakaan.Helpers
@model IEnumerable<MVCPerpustakaan.Models.Buku>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Judul)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Penulis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Penerbit)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
           Gambar
        </th>
        <th>
           Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
    
        <td>
            @Html.DisplayFor(modelItem => item.Judul)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Penulis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Penerbit)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.GambarBuku(item.Gambar, "58px", "60px")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BukuId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BukuId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BukuId })
        </td>
    </tr>
}

</table>
